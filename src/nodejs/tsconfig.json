{
  "include": [
    "index.ts",
    "global.d.ts"
  ],
  "compilerOptions": {
    "alwaysStrict": true,
    "downlevelIteration": false,
    "moduleResolution": "node",
    "newLine": "lf",
    "charset": "utf-8",
    "emitBOM": false,
    "noEmitOnError": true,
    "importsNotUsedAsValues": "remove",
    "allowSyntheticDefaultImports": true,
    // change to true (?)
    "noImplicitAny": false,
    // change to true (?)
    "strictNullChecks": false,
    // change to false (?)
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    /* Basic Options */
    "target": "es2017", /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019' or 'ESNEXT'. */
    "module": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "es2017",
      "es2018"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ],
    "baseUrl": "../dotnet/",
    "rootDirs": [
      "../nodejs/",
      "../dotnet/"
    ],
    "paths": {
      "@blazor/*": [
        "../nodejs/node_modules/@types/blazor__*"
      ],
      "*": [
        "*",
        "../nodejs/node_modules/*",
        "../nodejs/node_modules/@types/*",
        "../nodejs/*"
      ]
    }
  }
}
