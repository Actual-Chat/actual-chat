    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "es2017",
      "es2018"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ],
    "baseUrl": "../dotnet/",
    "rootDirs": [
      "../nodejs/",
      "../dotnet/"
    ],
    "paths": {
      "@blazor/*": [
        "../nodejs/node_modules/@types/blazor__*"
      ],
      "*": [
        "*",
        "../nodejs/node_modules/*",
        "../nodejs/node_modules/@types/*",
