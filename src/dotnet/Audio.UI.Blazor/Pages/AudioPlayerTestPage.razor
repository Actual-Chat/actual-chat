@page "/test/audio-player"
@namespace ActualChat.Audio.UI.Blazor

<div class="px-6 pt-6">
    <h1 class="block text-3xl text-bold mb-6">Audio player test page</h1>
    <div class="mt-1 text-xl text-bold">IsPlaying: @_isPlaying</div>
    <div class="mt-1 text-xl text-bold">MediaElementReadyState: @ToMediaElementReadyState(_prevMediaElementReadyState)</div>
    <div class="mt-1 text-xl text-bold">Offset: @_offset</div>
    <button onclick="@OnClick" class="mt-3 px-8 py-2 text-gray-50 rounded-md @(_isPlaying ? "bg-red-700" : "bg-green-700")">@(_isPlaying ? "Stop" : "Play")</button>
    <video controls="" autoplay="" name="media"><source src="https://dev.actual.chat/api/audio/download/audio-record/01FNB06R1YHJCT793JV1CVD79M/0000.webm" type="audio/webm"></video>
</div>

