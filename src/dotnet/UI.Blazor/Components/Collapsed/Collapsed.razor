@namespace ActualChat.UI.Blazor.Components

<details class="main-collapsed" open="@(!IsCollapsed)">
    <summary class="c-summary">
        <i class="icon-chevron-up closed"></i>
        <i class="icon-chevron-up open"></i>
        <span class="@TitleClass">@Title</span>
    </summary>
    @ChildContent
</details>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string TitleClass { get; set; } = "c-group-title";
    [Parameter] public bool IsCollapsed { get; set; } = true;
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
