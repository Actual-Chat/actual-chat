@using ActualChat.Users
@namespace ActualChat.UI.Blazor.Components

@switch (Presence)
{
    case Presence.Online:
        @("Online")
        break;
    case Presence.Recording:
        @("Speaking...")
        break;
    case Presence.Away or Presence.Offline:
        @if (LastCheckIn != null) {
            @("Last seen ")<LiveTimeDeltaText Moment="@LastCheckIn" NullText=""/>
        } else {
            @("Offline")
        }
        break;
}

@code {
    [Parameter] public Presence Presence { get; set; }
    [Parameter] public Moment? LastCheckIn { get; set; }
}
