@namespace ActualChat.UI.Blazor.Components

@{
    string additionalCssClass = Data.Status switch {
        NavbarLinkModelStatus.Online => "bg-green-500",
        NavbarLinkModelStatus.Offline => "border border-white",
        NavbarLinkModelStatus.None => "",
        _ => "",
    };
}

<div class="flex flex-row items-center mb-2 px-1">
    <span class="rounded-full block w-2 h-2 mr-3 @additionalCssClass"></span>
    <span class="text-white opacity-75 hover:opacity-100"><a href="@Data.Href">@Data.Name</a></span>
</div>

@code {
    [Parameter, EditorRequired]
    public NavbarLinkModel Data { get; set; } = null!;
}

