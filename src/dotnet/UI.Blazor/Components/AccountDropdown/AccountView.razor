@namespace ActualChat.UI.Blazor.Components
@using ActualChat.Users

<UserAuthorBadge
    UserId="@(User?.Id ?? "")"
    Size="SquareSize.Size9"
    ShowsPresence="true"
    TextClass="leading-5 font-medium text-primary" />

@code {
    [Inject] private Session Session { get; init; } = null!;
    [Inject] private IAuth Auth { get; init; } = null!;

    private User? User { get; set; }

    [CascadingParameter] public Task<AuthState> AuthStateTask { get; set; } = null!;

    protected override async Task OnParametersSetAsync() {
        User = (await AuthStateTask).User;
        StateHasChanged();
    }
}
