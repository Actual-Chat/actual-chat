@if (Error != null) {
    <Error @key="@Error"
           Class="@($"{Class} when-error")"
           Title="@Title"
           Dismissed="@Dismissed">@Error.Message</Error>
}

@code {
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public string Title { get; set; } = "Error!";
    [Parameter] public Exception? Error { get; set; }
    [Parameter] public EventCallback Dismissed { get; set; }
}
