<div class="@(_class ??= this.DefaultClass()) @Class h-full w-full flex flex-col flex-nowrap justify-between overflow-y-auto">
    <div class="flex flex-row justify-between mt-0 font-medium bg-primary md:bg-secondary text-primary p-3 select-none border-b border-accent">
        @Header
    </div>
    <div class="flex flex-col-reverse h-full overflow-y-auto">
        <div class="flex sticky right-0 w-full border-t border-primary md:border-secondary">
            @Footer
        </div>
        <div class="flex-1 flex flex-col overflow-y-auto bg-secondary px-3 pt-3">
            @Body
        </div>
    </div>
</div>

@code {
    private string? _class;

    [Parameter]
    public string Class { get; set; } = "";
    [Parameter]
    public RenderFragment? Header { get; set; }
    [Parameter]
    public RenderFragment? Body { get; set; }
    [Parameter]
    public RenderFragment? Footer { get; set; }
}
