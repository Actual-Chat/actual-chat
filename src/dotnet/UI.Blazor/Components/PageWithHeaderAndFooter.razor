<div class="@(_class ??= this.DefaultClass()) @Class h-full w-full flex flex-col flex-nowrap justify-between overflow-y-auto">
    @Header
    <div class="flex flex-col-reverse h-full overflow-y-auto">
        <div class="flex sticky right-0 w-full border-t border-primary md:border-secondary z-10">
            @Footer
        </div>
        <div class="flex-1 flex flex-col overflow-y-auto bg-secondary pt-3">
            @Body
        </div>
    </div>
</div>

@code {
    private string? _class;

    [Parameter]
    public string Class { get; set; } = "";
    [Parameter]
    public RenderFragment? Header { get; set; }
    [Parameter]
    public RenderFragment? Body { get; set; }
    [Parameter]
    public RenderFragment? Footer { get; set; }
}
