@using System.Text
@namespace ActualChat.UI.Blazor.Components

<button @ref="Ref"
        class="@Class btn"
        name="@Name"
        type="@GetButtonType()"
        disabled="@IsDisabled"
        autofocus="@IsAutofocused"
        @attributes="@AdditionalAttributes"
        @onclick="Click">
    <div class="@ContentClass btn-content" tabindex="-1">
        @ChildContent
    </div>
</button>

@code {
    private ElementReference _ref;

    [Parameter] public string Class { get; set; } = "btn-primary";
    [Parameter] public string ContentClass { get; set; } = "";
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Name { get; set; } = "";
    [Parameter] public ButtonType Type { get; set; } = ButtonType.Button;
    [Parameter] public bool IsDisabled { get; set; }
    [Parameter] public bool IsAutofocused { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> Click { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public ForwardRef? BackRef {get;set;}

    [Parameter(CaptureUnmatchedValues = true)]
    public IReadOnlyDictionary<string, object>? AdditionalAttributes { get; set; }

    private ElementReference Ref
    {
        get => _ref;
        set
        {
            _ref = value;
            BackRef?.SetValue(value);
        }
    }

    private string GetButtonType()
        => Type.ToString().ToLower();
}
