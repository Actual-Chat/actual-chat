@using Stl.Extensibility
@namespace ActualChat.UI.Blazor.Components
@implements IModalView<WebEdgeModal.Model>
@attribute [MatchFor(typeof(Model), typeof(IModalView))]

<DialogFrame Class="guide-modal" Title="Guide" HasCloseButton="true">
    <Body>

    <img src="/dist/images/guide/mic-access.svg" alt="mic access">
    <div class="c-text text-title-1">
        Allow access to mic in 5 steps
    </div>
    <div class="c-text font-normal">
        To use it for recording voice messages. Here are the guide how to enable microphone permission in the
        Microsoft Edge browser
    </div>

    <div class="c-text text-headline-1">
        1. Open Microsoft Edge > Preferences
    </div>
    <img src="/dist/images/guide/web-edge-01.svg" alt="WEB/Edge/01">

    <div class="c-text text-headline-1">
        2. Choose Cookies and Site Permissions
    </div>
    <img src="/dist/images/guide/web-edge-02.svg" alt="WEB/Edge/02">

    <div class="c-text text-headline-1">
        3. Select Microphone
    </div>
    <img src="/dist/images/guide/web-edge-03.svg" alt="WEB/Edge/03">

    <div class="c-text text-headline-1">
        4. Delete Actual.chat  from Block list
    </div>
    <img src="/dist/images/guide/web-edge-04.svg" alt="WEB/Edge/04">

    <div class="c-text text-headline-1">
        5. Open Actual.chat and allow to use mic
    </div>
    <img src="/dist/images/guide/web-edge-05.svg" alt="WEB/Edge/05">

    <div class="flex-x justify-end">
        <Button Class="btn-modal mobile" Click="OnCancel">
            OK
        </Button>
    </div>

    </Body>
</DialogFrame>

@code {
    [Inject] private Session Session { get; init; } = null!;
    [Inject] private UICommander UICommander { get; init; } = null!;

    [CascadingParameter] public Modal Modal { get; set; } = null!;
    [Parameter] public Model ModalModel { get; set; } = null!;

    private void OnCancel()
        => Modal.Close();

    public sealed record Model;
}
