@namespace ActualChat.UI.Blazor.Components

<ModalLayout Class="@Class" Title="@Title" HideHeader="HideHeader" ShowCloseButton="ShowCloseButton">
    <div class="flex-y grow p-5">
        <div class="modal-body grow">
            @Body
        </div>
        <div class="flex-x justify-end gap-x-2 pt-4 min-h-24 md:min-h-0">
            @Buttons
        </div>
    </div>
</ModalLayout>

@code {
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public bool HideHeader { get; set; }
    [Parameter] public bool ShowCloseButton { get; set; }
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public RenderFragment? Body { get; set; }
    [Parameter] public RenderFragment? Buttons { get; set; }
}
