@using ActualChat.UI.Blazor.Services
@namespace ActualChat.UI.Blazor.Components
@{
    var cls = $"modal-frame {Class}";
}

<ModalChrome Class="@cls" HasEscapeHandler="@HasEscapeHandler">
    @Header
    <ErrorBarrier Name="ModalFrame">@ChildContent</ErrorBarrier>
</ModalChrome>

@code {
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public RenderFragment ChildContent { get; set; } = null!;
    [Parameter] public RenderFragment Header { get; set; } = null!;
    [Parameter] public bool HasEscapeHandler { get; set; } = true;
}
