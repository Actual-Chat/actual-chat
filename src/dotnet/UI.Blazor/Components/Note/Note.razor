@namespace ActualChat.UI.Blazor

<div class="@CssClass">
  <h1>@Title</h1>
  <div>
    @ChildContent
  </div>
</div>

@code {
    [Parameter]
    public string CssClass { get; set; } = "";
    //[Parameter]
    //public Color Color { get; set; } = Color.Primary;
    [Parameter]
    public string Title { get; set; } = "Note:";
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
