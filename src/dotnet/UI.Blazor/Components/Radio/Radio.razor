@namespace ActualChat.UI.Blazor.Components

<input type="radio" class="@Class radio" id="@Id" name="@Name" disabled="@Disabled" value="@Value" @onchange="Change" checked="@IsChecked">
<label for="@Id" class="@LabelClass">@Title</label>

@code {
    [Parameter, EditorRequired] public string Id { get; set; } = "";
    [Parameter, EditorRequired] public string Name { get; set; } = "";
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public string LabelClass { get; set; } = "";
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool IsChecked { get; set; }
    [Parameter, EditorRequired] public string Value { get; set; } = "";
    [Parameter] public string? Title { get; set; }
    [Parameter] public EventCallback<ChangeEventArgs> Change { get; set; }
}
