@namespace ActualChat.UI.Blazor.Components
@implements IDisposable
@typeparam TEvent where TEvent : class

@code {
    [Inject] IEventAggregator EventAggregator { get; init; } = null!;

    [Parameter, EditorRequired]
    public IEventAggregator.EventHandler<TEvent> Handler { get; init; } = null!;

    protected override void OnInitialized() => EventAggregator.Subscribe(Handler);

    public void Dispose() => EventAggregator.Unsubscribe(Handler);

}
