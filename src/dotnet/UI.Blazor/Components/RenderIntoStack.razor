@implements IDisposable
@using ActualChat.UI.Blazor.Services
@{
    var items = RenderVars.RenderStack(Name);
    items.Set(r => MustPrepend ? r.Value.Insert(0, this) : r.Value.Add(this));
}
@code {
    [Inject] private RenderVars RenderVars { get; init; } = null!;

    [Parameter, EditorRequired] public string Name { get; set; } = "";
    [Parameter] public string Key { get; set; } = "";
    [Parameter] public double Order { get; set; } = 0;
    [Parameter] public bool MustPrepend { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }

    public bool IsDisposed { get; private set; }

    public void Dispose() {
        IsDisposed = true;
        var items = RenderVars.RenderStack(Name);
        items.Set(r => r.Value.Remove(this));
    }
}
