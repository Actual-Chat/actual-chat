@namespace ActualChat.UI.Blazor.Components

@if (StartGroup) {
    <li class="ac-menu-separator">
        <hr class="ac-menu-separator-hr">
    </li>
}

<li @onclick="OnClick"
    class="ac-menu-item @Class"
    data-tooltip="@Tooltip"
    data-tooltip-position="@(FloatingPosition.ToPositionString())">
    <div class="ac-menu-content">
        <div class="ac-menu-icon">
            @if (IconContent == null ) {
                <i class="@Icon"></i>
            } else {
                @IconContent
            }
        </div>
        <div class="ac-menu-text">
            @if (TextContent == null) {
                @Text
            } else {
                @TextContent
            }
        </div>
    </div>
</li>

@code {
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public string Icon { get; set; } = "";
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public bool StartGroup { get; set; }
    [Parameter] public RenderFragment? IconContent { get; set; }
    [Parameter] public RenderFragment? TextContent { get; set; }
    [Parameter] public string Tooltip { get; set; } = "";
    [Parameter] public FloatingPosition FloatingPosition { get; set; }
}
