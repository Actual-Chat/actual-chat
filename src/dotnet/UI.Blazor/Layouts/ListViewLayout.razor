@inherits LayoutComponentBase

<IsolateRerender>
    <BaseLayout>
        <Body>
            <PageWithHeaderAndFooter Class="list-view-layout">
                <LeftDrawer><RenderSlot Name="MainLeftDrawer"/></LeftDrawer>
                <Header><RenderSlot Name="MainHeader"/></Header>
                <SubHeader><RenderStack Name="SubHeader"/></SubHeader>
                <Footer><RenderSlot Name="MainFooter"/></Footer>
                <SubFooter><RenderStack Name="SubFooter"/></SubFooter>
                <Body><RerenderRegion>@Body</RerenderRegion>
                </Body>
                <RightDrawer><RenderSlot Name="MainRightDrawer"/></RightDrawer>
            </PageWithHeaderAndFooter>
        </Body>
    </BaseLayout>
</IsolateRerender>
