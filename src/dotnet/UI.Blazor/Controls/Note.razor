<div class="@Class @(_typeClass ??= CssClasses.Default[GetType()])">
    <h1>@Title</h1>
    <div>
        @ChildContent
    </div>
</div>

@code {
    private static string? _typeClass;

    [Parameter]
    public string Class { get; set; } = "";
    [Parameter]
    public string Title { get; set; } = "Note:";
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
