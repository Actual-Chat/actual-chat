@using Cysharp.Text
@using Castle.Core.Internal
@if (Error != null) {
    <Error @key="@Error"
           Class="@($"{Class} when-command-error")"
           Title="Action failed!"
           Dismissed="@Dismissed">@Error.Message</Error>
}

@code {
    [Parameter] public string Class { get; set; } = "";
    [Parameter] public Exception? Error { get; set; }
    [Parameter] public EventCallback Dismissed { get; set; }
}
