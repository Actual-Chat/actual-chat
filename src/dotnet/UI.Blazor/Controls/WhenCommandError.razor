@if (Error != null) {
    <Error @key="@Error" Title="Action failed!" Dismissed="@Dismissed">@Error.Message</Error>
}

@code {
    [Parameter]
    public string Class { get; set; } = CssClasses.Default[typeof(WhenCommandError)];
    [Parameter]
    public Exception? Error { get; set; }
    [Parameter]
    public EventCallback Dismissed { get; set; }
}
