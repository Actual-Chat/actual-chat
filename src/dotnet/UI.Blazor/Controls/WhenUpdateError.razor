@if (Error != null) {
    <Error @key="@Error"
           Class="@((Class.IsNullOrEmpty() ? "" : Class + " ") + CssClasses.Default[GetType()])"
           Title="Update failed!"
           Dismissed="@Dismissed">@Error.Message</Error>
}

@code {
    [Parameter]
    public string Class { get; set; } = "";
    [Parameter]
    public Exception? Error { get; set; }
    [Parameter]
    public EventCallback Dismissed { get; set; }
}
