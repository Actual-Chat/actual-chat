@page "/test/ai-chat-messages"
@namespace ActualChat.Chat.UI.Blazor.Components

<RequireAccount MustBeAdmin="true"/>
<MainHeader>AI Chat Messages Test Page</MainHeader>

<div class="side-nav side-nav-right bg-03">
    <div class="right-chat-panel p-2 gap-y-4 !overflow-auto" style="scrollbar-width: none;">
        <h1>Class "prompt-message"</h1>
        <div class="flex-wrap flex-x gap-2">
            <div class="prompt-message">
                <i class="icon-ai-search"></i>
                <span>Search anything in the chat</span>
            </div>
            <div class="prompt-message">
                <i class="icon-ai-search"></i>
                <span>Search by date</span>
            </div>
            <div class="prompt-message">
                <i class="icon-ai-search"></i>
                <span>Search by contact</span>
            </div>
            <div class="prompt-message">
