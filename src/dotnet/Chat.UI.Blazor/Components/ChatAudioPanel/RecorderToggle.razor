@code {
    public enum RecordingState {
        On,
        Off,
        OnToOff,
        OffToOn,
        Initializing,
    }
    [Inject] private ChatUI ChatUI { get; init; } = null!;
    [Inject] private AudioRecorder AudioRecorder { get; init; } = null!;

    [Parameter, EditorRequired] public ChatId ChatId { get; set; }

    private bool IsLongPress { get; set; } = false;
    private bool CanRecord { get; set; } = true;

    protected override async Task OnInitializedAsync() {
        CanRecord = await AudioRecorder.CanRecord();
    }

    protected override ComputedState<Model?>.Options GetStateOptions()
        => new() { UpdateDelayer = FixedDelayer.Instant };

    protected override async Task<Model?> ComputeState(CancellationToken cancellationToken) {
        CanRecord = await AudioRecorder.CanRecord(cancellationToken);
        var isRecordingRequested = await ChatUI.IsRecording(ChatId);
        // Default scheduler is used from here
        var lastState = State.LatestNonErrorValue;
        if (lastState == null)
            return new (isRecordingRequested ? RecordingState.On : RecordingState.Off);

        var recordingState = await AudioRecorder.State.Use(cancellationToken);
        if (recordingState != null && recordingState.ChatId != ChatId)
            return new (RecordingState.Off);

        return (lastState.RecordingState, isRecordingRequested, recordingState?.IsRecording ?? false) switch  {
            (RecordingState.OffToOn, false, false) => new (RecordingState.OnToOff),
            (RecordingState.Initializing, false, false) => new (RecordingState.OnToOff),
            (RecordingState.On, false, _) => new (RecordingState.OnToOff),
            (RecordingState.OnToOff, false, false) => new (RecordingState.OnToOff),
            (RecordingState.Initializing, _, true) => new (RecordingState.OffToOn),
            (_, false, false) => new (RecordingState.Off),
            (_, true, false) => new (RecordingState.Initializing),
            (_, _, true) => new (RecordingState.On),
        };
    }

    private async Task OnClick() {
        var m = State.LatestNonErrorValue;
        var isRecordingInThisChat = m?.RecordingState is RecordingState.On or RecordingState.OffToOn or RecordingState.Initializing;
        if (isRecordingInThisChat) {
            _ = ChatUI.SetRecordingChatId(default);
            return;
        }
        CanRecord = await AudioRecorder.CanRecord();
        if (!CanRecord) {
            StateHasChanged();
            return;
        }
        _ = ChatUI.SetRecordingChatId(ChatId);
    }

    private async Task OnLongPressStart() {
        if (IsLongPress)
            return;
        CanRecord = await AudioRecorder.CanRecord();
        if (!CanRecord) {
            StateHasChanged();
            return;
        }
        IsLongPress = true;
        _ = ChatUI.SetRecordingChatId(ChatId);
    }

    private void OnLongPressStop() {
        if (!IsLongPress)
            return;
        IsLongPress = false;
        _ = ChatUI.SetRecordingChatId(default);
    }

    public record Model(RecordingState RecordingState);
}
