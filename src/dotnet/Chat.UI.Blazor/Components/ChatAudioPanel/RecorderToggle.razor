@code {
    private Model _rendered = Model.None;
    private bool? _canRecord = null;

    [Inject] private ChatUI ChatUI { get; init; } = null!;
    [Inject] private AudioRecorder AudioRecorder { get; init; } = null!;

    private bool CanRecord => _canRecord ?? true;
    private bool IsLoading => !Chat.Id.IsNone && State.Value.Chat.Id != Chat.Id;
    private bool IsRecording => !IsLoading && State.Value.IsRecording;
    private bool IsForcePush { get; set; } = false;

    [Parameter, EditorRequired] public Chat Chat { get; set; } = Chat.None;

    protected override ComputedState<Model>.Options GetStateOptions()
        => new() {
            InitialValue = Model.Loading,
            UpdateDelayer = FixedDelayer.Instant,
        };

    protected override async Task<Model> ComputeState(CancellationToken cancellationToken) {
        var mediaState = await ChatUI.GetMediaState(Chat.Id);
        return new Model(Chat, mediaState.IsRecording);
    }

    private async Task OnClick() {
        if (IsLoading)
            return; // Loading

        if (IsRecording) {
            _ = ChatUI.SetRecordingChatId(default);
        }
        else {
            if (_canRecord == null) {
                _canRecord = await AudioRecorder.CanRecord();
                StateHasChanged();
            }
            if (!CanRecord)
                return;

            _ = ChatUI.SetRecordingChatId(Chat.Id);
        }
    }

    private async Task OnContextMenu() {
        if (IsForcePush)
            return;

        if (_canRecord == null) {
            _canRecord = await AudioRecorder.CanRecord();
            StateHasChanged();
        }
        if (!CanRecord || IsLoading)
            return;

        IsForcePush = true;
        _ = ChatUI.SetRecordingChatId(Chat.Id);
    }

    private void OnPointerUp() {
        if (!IsForcePush)
            return;

        IsForcePush = false;
        _ = ChatUI.SetRecordingChatId(default);
    }

    public sealed record Model(
        Chat Chat,
        bool IsRecording = false
    ) {
        public static Model Loading { get; } = new(Chat.Loading);
        public static Model None { get; } = new(Chat.None);
    }
}
