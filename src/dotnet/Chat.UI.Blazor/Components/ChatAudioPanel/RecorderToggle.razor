@namespace ActualChat.Chat.UI.Blazor.Components
@using ActualChat.Audio.UI.Blazor.Components
@inherits ComputedStateComponent<RecorderToggle.Model>
@{
    var rendered = _rendered;
    var m = _rendered = State.Value;
    if (rendered.Chat.Id != m.Chat.Id)
        rendered = m; // Disables the animation on chat switching

    var wrapperCls = (rendered.IsRecording, m.IsRecording) switch {
        (false, true) => "record-off-to-on",
        (true, false) => "record-on-to-off",
        (_, true) => "record-on",
        (_, false) => "record-off",
    };
}

@if (CanRecord) {
    <div class="@wrapperCls recorder-wrapper">
        <ButtonRound Class="record-off-btn"
                     Click="OnClick"
                     @onpointerup="OnPointerUp"
                     @oncontextmenu="OnContextMenu"
                     data-context-menu-delay="200">
                <img src="/dist/images/logo-white.svg" alt="logo" class="recorder-icon">
        </ButtonRound>
        <ButtonRound Class="record-on-btn"
                     Click="OnClick"
                     @onpointerup="OnPointerUp"
                     @oncontextmenu="OnContextMenu"
                     data-context-menu-delay="200">
            <i class="icon-Stop-fill text-2xl"></i>
        </ButtonRound>
    </div>
} else {
    <div class="recorder-wrapper">
