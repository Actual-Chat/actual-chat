@namespace ActualChat.Chat.UI.Blazor.Components
@using ActualChat.Audio.UI.Blazor.Components
@inherits ComputedStateComponent<RecorderToggle.Model?>
@{
    var m = State.LatestNonErrorValue;
    var recordState = m?.RecordingState ?? RecordingState.Off;
    var wrapperCls = recordState switch
    {
        RecordingState.OffToOn => "record-off-to-on",
        RecordingState.OnToOff => "record-on-to-off",
        RecordingState.Off => "record-off",
        RecordingState.Initializing => "record-init",
        _ => "record-on",
        };
}

@if (CanRecord) {
