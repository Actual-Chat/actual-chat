@namespace ActualChat.Chat.UI.Blazor.Components

@code {
    [Inject] IChats Chats { get; set; } = null!;
    [Inject] Session Session { get; set; } = null!;
    [CascadingParameter]
    public MentionListContext Context { get; set; } = null!;
    [Parameter, EditorRequired]
    public string ChatId { get; set; } = "";

    protected override void OnParametersSet() {
        base.OnParametersSet();

        if (Context == null)
            throw new InvalidOperationException("Component should be used inside MentionListContextProvider component");
        if (ChatId.IsNullOrEmpty())
            throw new InvalidOperationException("ChatId should be specified");
        Context.SetMentionsRetriever(new Retriever(Chats, Session, ChatId));
    }

    class Retriever : IMentionsRetriever {
        private readonly IChats _chats;
        private readonly Session _session;
        private readonly string _chatId;

        public Retriever(IChats chats, Session session, string chatId) {
            _chats = chats;
            _session = session;
            _chatId = chatId;
        }

        public async Task<IEnumerable<MentionListItem>> GetMentions(string search, int limit, CancellationToken cancellationToken) {
            var authors = await _chats.GetChatAuthors(_session, _chatId, cancellationToken);
            var candidates = authors
                .Where(c => c.AuthorName.Contains(search, StringComparison.OrdinalIgnoreCase))
                .OrderBy(c => c.AuthorName)
                .Take(limit);
            var mentions = candidates.Select(c => new MentionListItem("a:" + c.AuthorId, c.AuthorName)).ToArray();
            return mentions;
        }
    }
}
