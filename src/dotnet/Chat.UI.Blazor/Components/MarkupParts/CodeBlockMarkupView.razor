@using Stl.Extensibility
@inherits MarkupViewBase<CodeBlockMarkup>
@attribute [MatchFor(typeof(CodeBlockMarkup), typeof(IMarkupView))]
@{
    var cls = "code-block-markup-view";
    if (!Markup.Language.IsNullOrEmpty())
        cls += " language-" + Markup.Language;
}

<pre class="my-1 max-w-[90%] @cls"><code class="block border-0 border-l-4 rounded-l p-1 px-1.5 bg-02 @cls">@Markup.Code</code></pre>
