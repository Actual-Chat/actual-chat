@using Stl.Extensibility
@inherits MarkupViewBase<StylizedMarkup>
@attribute [MatchFor(typeof(StylizedMarkup), typeof(IMarkupView))]

@switch (Markup.Style) {
case TextStyle.Bold:
    <strong class="stylized-text-markup"><MarkupView Markup="@Markup.Content"/></strong>
    break;
case TextStyle.Italic:
    <em class="stylized-text-markup"><MarkupView Markup="@Markup.Content"/></em>
    break;
default:
    <MarkupView Markup="@Markup.Content"/>
    break;
}
