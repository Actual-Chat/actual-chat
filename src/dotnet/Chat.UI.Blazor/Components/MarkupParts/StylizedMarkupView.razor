@using Stl.Extensibility
@inherits MarkupViewBase<StylizedMarkup>
@attribute [MatchFor(typeof(StylizedMarkup), typeof(IMarkupView))]

@if (Markup.Style == TextStyle.Bold) {
    <strong><MarkupView Markup="@Markup.Content"/></strong>
} else if (Markup.Style == TextStyle.Italic) {
    <em><MarkupView Markup="@Markup.Content"/></em>
} else {
    <MarkupView Markup="@Markup.Content"/>
}
