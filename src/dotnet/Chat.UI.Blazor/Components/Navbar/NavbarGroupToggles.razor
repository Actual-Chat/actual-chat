@using ActualChat.Hosting
@using ActualChat.UI.Blazor.Services
@using ActualChat.Users
@namespace ActualChat.Chat.UI.Blazor.Components
@inherits NavbarContentBase
@{
    var m = State.LatestNonErrorValue;
}

<NavbarGroupToggle
    Title="Chats"
    Id="@Ids.Chats"
    Tooltip="Chats"
    FloatingPosition="FloatingPosition.Right">
    <i class="icon-message-ellipse text-2xl font-medium"></i>
</NavbarGroupToggle>

@if (m.Account.IsActive()) {
    <NavbarGroupToggle
        Title="Contacts"
        Id="@Ids.Contacts"
        Tooltip="Contacts"
        FloatingPosition="FloatingPosition.Right">
        <i class="icon-people text-2xl font-medium"></i>
    </NavbarGroupToggle>
}
@if (m.Account.IsAdmin) {
    <NavbarGroupToggle
        Title="Administration"
        Id="@Ids.Administration"
        Tooltip="Administration"
        FloatingPosition="FloatingPosition.Right">
        <i class="icon-adminx-1 text-2xl font-medium"></i>
    </NavbarGroupToggle>
}
@if (HostInfo.IsDevelopmentInstance) {
    <NavbarGroupToggle
        Title="Test Pages"
        Id="@Ids.TestPages"
        Tooltip="Test Pages"
        FloatingPosition="FloatingPosition.Right">
        <i class="icon-alert-triangle text-2xl font-medium"></i>
    </NavbarGroupToggle>
}

@code {
    public static class Ids {
        public const string Chats = "chats";
        public const string Contacts = "contacts";
        public const string Administration = "admin";
        public const string TestPages = "testPages";
    }
}
