@code {
    [Inject] private ModalUI ModalUI { get; init; } = null!;

    private Task OnCreateChatClick()
        => ModalUI.Show(new NewChatModal.Model());

    private void OnRestartClick()
        => Services.GetRequiredService<ReloadUI>().Reload(Links.Home);
}
