@namespace ActualChat.Chat.UI.Blazor.Components
@inherits AuthorBadgeBase
@{
    var m = State.Value;
}

<AvatarCircle
    Avatar="@m.Author.Avatar"
    Size="@Size"
    Width="@Width"
    Height="@Height"
    IsBlurred="@IsBlurred"
    IsSquare="@IsSquare"
    BadgeContent="@BadgeContent"
    Click="@Click" />

@code {
    [Parameter] public SquareSize Size { get; set; } = SquareSize.Size10;
    [Parameter] public int Width { get; set; }
    [Parameter] public int Height { get; set; }
    [Parameter] public bool IsBlurred { get; set; }
    [Parameter] public bool IsSquare { get; set; }
    [Parameter] public EventCallback Click { get; set; }
    [Parameter] public RenderFragment? BadgeContent { get; set; }
}
