@namespace ActualChat.Chat.UI.Blazor.Components
@using ActualChat.Audio.UI.Blazor.Components

<div class="mobile-control-panel flex-x gap-x-6">
    <div class="mobile-language-button mobile-button flex">
        <MobileLanguageToggle/>
    </div>
    <div class="mobile-recorder-button mobile-button flex">
        <MobileRecorderToggle ChatId="@Chat.Id"/>
    </div>
    <div class="mobile-playback-toggle">
        <MobilePlaybackToggle ChatId="@Chat.Id"/>
    </div>
</div>

@code {
    [CascadingParameter] public Chat Chat { get; set; } = null!;
}
