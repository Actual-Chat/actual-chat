@namespace ActualChat.Chat.UI.Blazor.Components
@using BlazorContextMenu

<RenderIntoStack Name="@ContextMenuContainer.RenderStackName" Key="@MenuId">
    <ContextMenu Id="@MenuId" Template="horizontal" Class="message-hover-menu">
        <ChildContent>
            @{
                var x = context.Data;
            }
            @if (context.Data is ChatMessageModel chatMessageModel) {
                <MessageHoverMenuContent Message="@chatMessageModel"/>
            }
        </ChildContent>
    </ContextMenu>
</RenderIntoStack>

@code{
    public const string MenuId = "menu-MessageHoverMenu";
}
