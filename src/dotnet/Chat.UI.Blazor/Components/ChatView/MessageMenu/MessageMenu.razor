@namespace ActualChat.Chat.UI.Blazor.Components
@using BlazorContextMenu

<RenderIntoStack Name="@ContextMenuContainer.RenderStackName" Key="@MenuId">
    <ContextMenu Id="@MenuId">
        <ChildContent>
            @if (context.Data is ChatMessageModel chatMessageModel) {
                <CascadingValue Value="@chatMessageModel">
                    <MessageMenuContent/>
                </CascadingValue>
            }
        </ChildContent>
    </ContextMenu>
</RenderIntoStack>

@code{
    public const string MenuId = "menu-MessageMenu";
}
