@namespace ActualChat.Chat.UI.Blazor.Components
@using BlazorContextMenu

<RenderIntoStack Name="@ContextMenuContainer.RenderStackName">
    <ContextMenu Id="@Id">
        <ChildContent>
            <CascadingValue Value="@(context.Data as ChatMessageModel)">
                <MessageContextMenuContent/>
            </CascadingValue>
        </ChildContent>
    </ContextMenu>
</RenderIntoStack>

@code{
    public const string Id = "contextMenu-chat-message";
}
