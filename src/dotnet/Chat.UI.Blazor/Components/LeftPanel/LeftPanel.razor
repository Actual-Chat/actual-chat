@namespace ActualChat.Chat.UI.Blazor.Components
@using ActualChat.UI.Blazor.Components.SideNav
@implements IDisposable

<SideNav
    Side="SideNavSide.Left"
    IsOpen="@Panels.Left.IsVisible.Value"
    VisibilityChanged="@(isOpen => Panels.Left.SetIsVisible(isOpen))">
    <div class="flex-x h-full bg-04">
        <LeftPanelButtons/>
        <LeftPanelContent/>
    </div>
</SideNav>

@code {
    [Inject] private PanelsUI Panels { get; init; } = null!;

    protected override void OnInitialized()
        => Panels.Left.VisibilityChanged += OnNavbarVisibilityChanged;

    public void Dispose()
        => Panels.Left.VisibilityChanged -= OnNavbarVisibilityChanged;

    private void OnNavbarVisibilityChanged(object? sender, EventArgs e)
        => InvokeAsync(StateHasChanged);
}
