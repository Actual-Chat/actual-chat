@namespace ActualChat.Chat.UI.Blazor.Components
@inherits FusionComponentBase
@{
    var isRecording = ChatState.IsRecording;
    var cls = "important-item " + (isRecording ? "on" : "off");
}

@if (isRecording) {
    <MenuEntry
        Class="@cls"
        Icon="icon-Stop-fill"
        Text="Stop talking"
        Click="@(_ => AudioUI.SetRecordingChatId(default))">
    </MenuEntry>
} else {
    <MenuEntry
        Class="@cls"
        Icon="icon-mic"
        Text="Start talking"
        Click="@(_ => AudioUI.SetRecordingChatId(ChatState.Id))">
    </MenuEntry>
}

@code {
    [Inject] private AudioUI AudioUI { get; init; } = null!;

    [CascadingParameter] public ChatState ChatState { get; set; } = null!;
}
