@namespace ActualChat.Chat.UI.Blazor.Components
@inherits FusionComponentBase

<MenuEntrySeparator />
<MenuEntry
    Class="warning-item"
    Icon="icon-trash03"
    Text="Leave chat"
    Click="@OnLeaveChatClick">
</MenuEntry>

@code {
    [Inject] private ModalUI ModalUI { get; init; } = null!;

    [CascadingParameter] public ChatState ChatState { get; set; } = null!;

    private void OnLeaveChatClick() {
        _ = ModalUI.Show(new LeaveChatConfirmationModal.Model(ChatState.Chat));
    }
}
