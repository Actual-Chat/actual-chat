@namespace ActualChat.Chat.UI.Blazor.Components
@inherits FusionComponentBase
@{
    var rules = ChatInfo.Chat.Rules;
}

@if (rules.CanWrite()) {
    <ChatMenuRecord/>
}
<ChatMenuPin/>
<ChatMenuListen/>
@if (rules.CanLeave()) {
    <ChatMenuLeave/>
}

@code{
    [CascadingParameter] public ChatInfo ChatInfo { get; set; } = null!;
}
