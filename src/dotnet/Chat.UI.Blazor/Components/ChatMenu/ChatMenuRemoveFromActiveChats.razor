@namespace ActualChat.Chat.UI.Blazor.Components
@inherits FusionComponentBase

<MenuEntry
    Icon="icon-close"
    Text="Remove from Recent Chats"
    Click="@OnClick">
</MenuEntry>

@code {
    [Inject] private ActiveChatsUI ActiveChatsUI { get; init; } = null!;

    [CascadingParameter] public ChatState ChatState { get; set; } = null!;

    private void OnClick()
        => _ = ActiveChatsUI.RemoveActiveChat(ChatState.Id);
}
