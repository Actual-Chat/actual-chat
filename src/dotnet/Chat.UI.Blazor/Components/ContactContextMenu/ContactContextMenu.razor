@namespace ActualChat.Chat.UI.Blazor.Components
@using BlazorContextMenu

<RenderIntoStack Name="@ContextMenuContainer.RenderStackName">
    <ContextMenu Id="@MenuId">
        <ChildContent>
            @if (context.Data is UserContact userContact) {
                <CascadingValue Value="@userContact">
                    <ContactContextMenuAddToFavorites/>
                    <ContactContextMenuPin/>
                </CascadingValue>
            }
        </ChildContent>
    </ContextMenu>
</RenderIntoStack>

@code{
    public const string MenuId = "menu-ContactContextMenu";
}
