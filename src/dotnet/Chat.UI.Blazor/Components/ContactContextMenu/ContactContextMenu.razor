@namespace ActualChat.Chat.UI.Blazor.Components
@using BlazorContextMenu

<RenderIntoStack Name="@ContextMenuContainer.RenderStackName">
    <ContextMenu Id="@Id">
        <ChildContent>
            <CascadingValue Value="@(context.Data as UserContact)">
                <ContactContextMenuAddToFavorites />
                <ContactContextMenuPin/>
            </CascadingValue>
        </ChildContent>
    </ContextMenu>
</RenderIntoStack>

@code{
    public const string Id = "contextMenu-contactList-chat";
}
