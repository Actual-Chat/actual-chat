@namespace ActualChat.Chat.UI.Blazor.Components
@using ActualChat.Notification
@inherits ComputedStateComponent<RightPanelChatInfo.Model>
@{
    var m = State.LatestNonErrorValue;
    if (m.Title == null)
        return;
}

<div class="px-5 py-3 space-y-3">
    <div class="flex-x">
        <div class="mr-3">
            <ChatIcon Chat="Chat" Size="SquareSize.Size16"/>
        </div>
        <div class="flex-y min-w-0 self-center">
            <div class="text-01 text-xl truncate">
                @m.Title
            </div>
            <div class="text-03 text-base">
                @(m.IsPublic ? "Public" : "Private")
            </div>
        </div>
    </div>

    @if (m.PublicUrl != null) {
        <div class="flex-x overflow-hidden cursor-pointer hover:bg-round-hover rounded-lg"
            @onclick="() => OnPublicUrlClick(m.PublicUrl)">
            <div class="flex min-w-14 min-h-14 mr-3 items-center justify-center">
                <i class="icon-link-2 text-2xl text-icons-03"></i>
            </div>
            <div class="flex-y min-w-0 self-center">
                <div class="text-01 text-lg truncate">
                    @m.PublicUrlTitle
                </div>
                <div class="text-03 text-base">
                    Public join link
                </div>
            </div>
        </div>
    }

    <div class="flex-x overflow-hidden cursor-pointer hover:bg-round-hover rounded-lg"
         @onclick="() => OnValueChanged(!m.IsSubscribed)"
         @onclick:preventDefault="true">
        <div class="flex min-w-14 min-h-14 mr-3 items-center justify-center">
            <i class="icon-bell text-2xl text-icons-03"></i>
        </div>
        <div class="flex-y min-w-0 self-center grow">
            <div class="text-01 text-lg truncate">
                Notifications
            </div>
            <div class="text-03 text-base">
                @(m.IsSubscribed ? "On" : "Off")
            </div>
        </div>
        <div class="flex self-center">
            <Toggle Value="@(m.IsSubscribed)" />
        </div>
    </div>
</div>

@code {
    [Inject] private Session Session { get; init; } = null!;
    [Inject] private ImageViewerUI ImageViewerUI { get; init; } = null!;
    [Inject] private UrlMapper UrlMapper { get; init; } = null!;
    [Inject] private LinkInfoBuilder LinkInfoBuilder { get; init; } = null!;
    [Inject] private ClipboardUI ClipboardUI { get; init; } = null!;
    [Inject] private INotifications Notifications { get; init; } = null!;
    [Inject] private UICommander UICommander { get; init; } = null!;

    [CascadingParameter] public Chat Chat { get; set; } = null!;

    protected override ComputedState<Model>.Options GetStateOptions()
        => new() { InitialValue = Model.None };

    protected override async Task<Model> ComputeState(CancellationToken cancellationToken) {
        var chatLinkInfo = Chat.IsPublic ? LinkInfoBuilder.GetFrom(Links.ChatPage(Chat.Id)) : null;
        var publicUrl = chatLinkInfo?.CopyLink;
        var chatAbsolutePath = chatLinkInfo?.CopyLink.ToUri().AbsolutePath;
        var publicUrlTitle = chatAbsolutePath == null
            ? ""
            : chatAbsolutePath.Substring(1, chatAbsolutePath.Length - 1);
        var isSubscribed = await Notifications.IsSubscribed(Session, Chat.Id, cancellationToken);
        return new Model {
            Title = Chat.Title,
            IsPublic = Chat.IsPublic,
            Picture = Chat.Picture,
            PublicUrl = publicUrl,
            PublicUrlTitle = publicUrlTitle,
            IsSubscribed = isSubscribed,
        };
    }

    private async Task OnPublicUrlClick(string publicUrl) {
        await ClipboardUI.WriteText(publicUrl);
    }

    private Task OnValueChanged(bool isMuted)
        => UICommander.Run(new INotifications.SetStatusCommand(Session, Chat.Id, isMuted));

    public sealed record Model {
        public static Model None { get; } = new();

        public string? Picture { get; init; }
        public string? Title { get; init; }
        public bool IsPublic { get; init; }
        public string? PublicUrl { get; init; }
        public string? PublicUrlTitle { get; init; }
        public bool IsSubscribed { get; init; }
    }
}
