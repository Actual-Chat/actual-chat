@namespace ActualChat.Chat.UI.Blazor.Components
@inherits ChatAuthorBadgeBase
@{
    var m = State.LatestNonErrorValue;
}

<AvatarName Avatar="@m.ChatAuthor.Avatar" Class="@Class" Click="OnChatAuthorClick"/>

@code {
    [Inject] private ChatUI ChatUI { get; init; } = null!;

    [Parameter] public string Class { get; set; } = "";
    [Parameter] public bool EnableDetailsPopup { get; set; } = true;

    private void OnChatAuthorClick() {
        if (EnableDetailsPopup) {
            var author = State.LatestNonErrorValue.ChatAuthor;
            ChatUI.ShowChatAuthorModal(author.Id);
        }
    }
}
