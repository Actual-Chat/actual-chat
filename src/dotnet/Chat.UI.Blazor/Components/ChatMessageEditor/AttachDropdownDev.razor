@using ActualChat.UI.Blazor.Components.Dropdown
@namespace ActualChat.Chat.UI.Blazor.Components

@{
    var dropdownButtonIcon = @"<svg class=""fill-current h-6 w-6 text-secondary hover:text-primary"" xmlns=""http://www.w3.org/2000/svg"" viewBox=""0 0 20 20"">
    <path d=""M11 9h4v2h-4v4H9v-4H5V9h4V5h2v4zm-1 11a10 10 0 1 1 0-20 10 10 0 0 1 0 20zm0-2a8 8 0 1 0 0-16 8 8 0 0 0 0 16z""/>
    </svg>";
}

<Dropdown @bind-IsMenuOpen="@IsMenuOpen">
    <DropdownMenu IsOpen="@IsMenuOpen" Class="left-4 bottom-12" ItemClass="p-1 text-left" Orientation="Orientation.Vertical" IconPosition="IconPosition.Right" TooltipPosition="TooltipPosition.Top">
        <DropdownMenuItem Title="Upload File" Name="uploadFile" Icon="@dropdownButtonIcon"/>
        <DropdownMenuItem Title="Use Camera" Name="useCamera" Icon="@dropdownButtonIcon"/>
        <DropdownMenuItem Title="Change Theme" Name="changeTheme" Icon="@dropdownButtonIcon"/>
    </DropdownMenu>
    <DropdownButton Icon="@dropdownButtonIcon" Click="@OnButtonClick" Class="sticky flex outline-none hover:cursor-pointer text-primary px-3 py-2"/>
</Dropdown>

@code {
    private bool IsMenuOpen { get; set; }

    private void OnButtonClick()
        => IsMenuOpen = !IsMenuOpen;
}
