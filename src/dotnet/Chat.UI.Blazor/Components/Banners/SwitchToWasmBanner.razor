@using Stl.Extensibility
@namespace ActualChat.Chat.UI.Blazor.Components
@attribute [MatchFor(typeof(Model), typeof(IBannerView<>))]
@implements IBannerView<SwitchToWasmBanner.Model>

<Banner ShowCloseButton="true">
    <Icon>
        <i class="icon-checkmark-circle text-xl"></i>
    </Icon>
    <Body>Actual Chat is ready to restart in the optimized mode</Body>
    <Buttons>
        <Button Class="btn-transparent on">Restart</Button>
    </Buttons>
</Banner>

@code {
    [Parameter] public Model BannerModel { get; set; } = null!;

    public sealed record Model;
}
