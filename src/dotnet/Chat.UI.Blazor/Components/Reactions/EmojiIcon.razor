@namespace ActualChat.Chat.UI.Blazor.Components

@{
    var svgName = "";
    if (Id == Emoji.ThumbsUp)
        svgName = "emoji-thumbs-up";
    else if (Id == Emoji.RedHeart)
        svgName = "emoji-red-heart";
    else if (Id == Emoji.Lol)
        svgName = "emoji-lol";
    else if (Id == Emoji.Surprise)
        svgName = "emoji-surprise";
    else if (Id == Emoji.Sad)
        svgName = "emoji-sad";
    else if (Id == Emoji.Angry)
        svgName = "emoji-angry";
    else if (Id == Emoji.Poo)
        svgName = "emoji-poo";
}
@if (!svgName.IsNullOrEmpty()) {
    <img class="@Class" src="/dist/images/@(svgName).svg" alt="@svgName" />
} else {
    @Id
}

@code {
    [Parameter] public string Id { get; set; } = "";
    [Parameter] public string Class { get; set; } = "";
}
