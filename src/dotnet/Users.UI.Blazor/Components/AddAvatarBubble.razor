@namespace ActualChat.Chat.UI.Blazor.Components
@inherits BubbleBase

<BubbleContent Bubble="@(this)">
    <Title>Create new avatar</Title>
    <Body>
    <p>
        Avatars are your "looks" in different chats - e.g. you can use distinct avatars for your work & family chats.
    </p>
    <ul>
        <li>Each avatar may have a distinct name, photo, and bio.</li>
        <li>You can change avatar on per-chat basis.</li>
        <li>Some chats can be joined anonymously - avatars there are always randomly generated.</li>
    </ul>
    </Body>
</BubbleContent>
