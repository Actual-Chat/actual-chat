@using ActualChat.Chat
@using ActualChat.Media
@namespace ActualChat.Users.UI.Blazor.Components

<Pic Class="@Class" Picture="@Avatar.Picture" Title="@Avatar.Name" Size="@Size">
    <NoPicture>
        <AnonymousIcon/>
    </NoPicture>
</Pic>

@code {
    [Parameter, EditorRequired] public Avatar Avatar { get; set; } = AvatarFull.None;
    [Parameter] public SquareSize Size { get; set; } = SquareSize.Size9;
    [Parameter] public string Class { get; set; } = "";
}
