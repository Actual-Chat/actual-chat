@using ActualChat.Chat

<Pic Class="@Class" ContentId="@(Avatar.Media?.ContentId ?? Avatar.Picture)" Title="@Avatar.Name" Size="@Size">
    <NoPicture>
        <AnonymousIcon/>
    </NoPicture>
</Pic>

@code {
    [Parameter, EditorRequired] public Avatar Avatar { get; set; } = AvatarFull.None;
    [Parameter] public SquareSize Size { get; set; } = SquareSize.Size9;
    [Parameter] public string Class { get; set; } = "";
}
