@using ActualChat.Users
@inherits MenuBase

@foreach (var value in Enum.GetValues<AccountStatus>()) {
    <MenuEntry
        Text="@value.ToString()"
        OnClick="_ => OnStatusSelected(value)">
    </MenuEntry>
}

@code {
    [Inject] private Session Session { get; init; } = null!;
    [Inject] private IAccounts Accounts { get; init; } = null!;
    [Inject] private UICommander UICommander { get; init; } = null!;

    private async Task OnStatusSelected(AccountStatus newStatus) {
        var account = await Accounts.GetOwn(Session, default);
        var command = new IAccounts.UpdateCommand(
            Session,
            account with { Status = newStatus },
            account.Version);
        await UICommander.Run(command);
    }
}
