@if (NativeHostSwitcher != null) {
    <TileTopic Topic="Host"/>
    <Tile Class="host-switcher-tile">
        <HostSwitcher NativeHostSwitcher="@NativeHostSwitcher" />
    </Tile>
}

@if (MauiLogAccessor != null) {
    <TileTopic Topic="Log viewer"/>
    <Tile Class="log-viewer-tile">
        <LogViewerTile MauiLogAccessor="@MauiLogAccessor" />
    </Tile>
}

@code {
    [Inject] private IServiceProvider Services { get; init; } = null!;

    private IMauiHostSwitcher? NativeHostSwitcher { get; set; }
    private IMauiLogAccessor? MauiLogAccessor { get; set; }

    protected override void OnInitialized() {
        NativeHostSwitcher = Services.GetService<IMauiHostSwitcher>();
        MauiLogAccessor = Services.GetService<IMauiLogAccessor>();
    }
}
