@namespace ActualChat.UI.Blazor.App.Components
@inherits BubbleBase

<BubbleContent Bubble="@(this)">
    <Title>Chat settings</Title>
    <Body>
    <p>
        This button opens the right panel, where you can see who else is in this chat,
        copy its link, and, if you are the chat owner, change its settings.
    </p>
    <p>
        Swiping from the right side on mobile is another way to open it.
    </p>
    </Body>
</BubbleContent>
