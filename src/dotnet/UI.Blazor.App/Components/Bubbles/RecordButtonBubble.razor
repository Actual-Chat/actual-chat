@namespace ActualChat.UI.Blazor.App.Components
@inherits BubbleBase

<BubbleContent Bubble="@(this)">
    <VideoMP4>
        <video autoplay loop muted playsinline src="/dist/images/bubbles/record-1.mp4"></video>
    </VideoMP4>
    <VideoWebM>
        <video autoplay loop muted playsinline src="/dist/images/bubbles/record-1.webm"></video>
    </VideoWebM>
    <Title>"Record" button</Title>
    <Body>
    <ul>
        <li><strong>Call mode:</strong> toggle this button to start or stop recording + listening.</li>
        <li><strong>Push-to-talk mode:</strong> push and hold it to record your phrase.</li>
    </ul>
    <p>
        When you record, we stream your voice and instantly transcribe it into text.
        Recording automatically stops if you remain silent for 30 seconds.
    </p>
    </Body>
</BubbleContent>
