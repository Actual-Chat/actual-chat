@namespace ActualChat.UI.Blazor.App.Components
@using ActualChat.Search

@switch (FoundItem.Scope) {
    case SearchScope.People:
        // Contact found
        <FoundContactListItem FoundItem="@FoundItem"/>
        break;
    case SearchScope.Groups:
        // Chat found
        <FoundChatListItem FoundItem="@FoundItem"/>
        break;
    case SearchScope.Places:
        // Place found
        <FoundPlaceListItem FoundItem="@FoundItem"/>
        break;
    case SearchScope.Messages:
        // Message found
        <FoundMessageListItem FoundItem="@FoundItem"/>
        break;
}

@code {
    [Parameter] public FoundItem FoundItem { get; set; } = null!;
}
