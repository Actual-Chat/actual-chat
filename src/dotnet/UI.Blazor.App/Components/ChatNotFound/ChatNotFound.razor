@namespace ActualChat.UI.Blazor.App.Components

<div class="chat-not-found-container">
    <div class="c-wrapper">
        <chat-not-found-svg/>
        <div class="text-wrapper">
            @if (Target is TargetKind.Chat) {
                <p>Chat not found.</p>
                <p>Choose another one.</p>
            } else {
                <p>Place not found.</p>
                <p>Choose another one.</p>
            }
        </div>
    </div>
</div>

@if (ShowSignIn) {
    <RenderIntoSlot Name="MainFooter">
        <div class="flex-x items-center justify-center gap-x-2">
            <span>You can try to sign in to see it</span>
            <SignInButton/>
        </div>
    </RenderIntoSlot>
}

@code {
    [Parameter] public bool ShowSignIn { get; set; }
    [Parameter] public TargetKind Target { get; set; } = TargetKind.Chat;

    public enum TargetKind { Chat, Place }
}
