@using ActualChat.UI.Blazor.Events
@namespace ActualChat.UI.Blazor.App.Components

<div class="left-panel-buttons">
    <div class="c-spacer"></div>
    <div class="c-content">
        <NavbarButton
            Class="settings-btn"
            ButtonClass="unhovered"
            data-menu="@(MenuRef.New<TopNavbarMenu>())"
            data-menu-trigger="@MenuTrigger.Primary"
            data-menu-placement="@(FloatingPosition.RightStart.ToPositionString())">
            <ChildContent>
                <logo-button-svg />
            </ChildContent>
            <Ending>
                <LeftLine/>
                <div class="right-line"></div>
            </Ending>
        </NavbarButton>
        <div class="c-buttons">
            <NavbarButtons/>
        </div>
        <AccountDropdown/>
    </div>
</div>

@code {
    [Inject] private UIEventHub UIEventHub { get; init; } = null!;
    [Inject] protected UIHub Hub { get; init; } = null!;

}
