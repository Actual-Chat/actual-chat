@namespace ActualChat.UI.Blazor.App

<div class="landing-links">
    <div class="flex-y gap-y-2 @(IsMobile ? "self-start" : "")">
        <div class="flex-y gap-y-2">
            <div class="font-semibold text-04 @(IsMobile ? "text-4.5xl text-center py-4" : "text-7xl")">
                Get Actual.chat
            </div>
        </div>
    </div>
    <div class="flex-x @(IsMobile ? "py-4 gap-x-4" : "gap-x-12")">
        <button class="link-btn">
            <div class="link-btn-content">
                <img src="/landing/android-logo-white.svg" alt="android">
            </div>
            <div class="text-04 @(IsMobile ? "text-sm" : "")">
                Download for Android
            </div>
        </button>
        <button class="link-btn">
            <div class="link-btn-content">
                <img src="/landing/apple-logo-white.svg" alt="apple">
            </div>
            <div class="text-04 @(IsMobile ? "text-sm" : "")">
                Download for iPhone/iPad
            </div>
        </button>
        <button class="link-btn">
            <div class="link-btn-content">
                <img src="/landing/web-logo-white.svg" alt="web">
            </div>
            <div class="text-04 @(IsMobile ? "text-sm" : "")">
                Download for Web
            </div>
        </button>
    </div>
</div>

@code{
    [Parameter] public bool IsMobile { get; set; }
}
