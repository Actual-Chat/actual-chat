@namespace ActualChat.UI.Blazor.App

<div class="page page-2 page-scrolling @(IsMobile ? "" : "pt-8")" id="landing-page-2">
    <div class="flex-y w-full items-center justify-center @(IsMobile ? "p-4" : "py-12 px-16")">
        <div class="flex @(IsMobile ? "w-full text-title-1" : "w-3/5 text-4xl font-semibold")">
            - Whatâ€™s the biggest differentiator between humans
            and any other form of life on Earth?
        </div>
        <div class="flex-y items-end @(IsMobile ? "pt-2 text-end text-title-1" : "w-3/5 text-4xl font-semibold")">
            <span>- Communication.</span>And the more productive it is, the faster we evolve.
        </div>
    </div>
    <div class="flex-y overflow-hidden @(IsMobile ? "py-4" : "px-16")">
        <LandingTimelineItem TextTop="fire" TextBottom="400,000 years ago" IsMobile="@IsMobile">
            <ContentIcon>
                <img src="/landing/timeline-fire.svg" alt="fire">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem IsLeft="true" TextTop="talking languages" TextBottom="200,000 years ago" IsMobile="@IsMobile">
            <ContentIcon>
                <img src="/landing/timeline-talking.svg" alt="talk">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem TextTop="written languages" TextBottom="7,300 years ago" IsMobile="@IsMobile">
            <ContentIcon>
                <img src="/landing/timeline-written.svg" alt="write">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem IsLeft="true" TextTop="wheel" TextBottom="5,300 years ago" IsMobile="@IsMobile">
            <ContentIcon>
                <img src="/landing/timeline-wheel.svg" alt="wheel">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem TextTop="telegraph" TextBottom="180 years ago" IsMobile="@IsMobile">
            <ContentIcon>
                <img src="/landing/timeline-telegraph.svg" alt="telegraph">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem IsLeft="true" TextTop="telephone" TextBottom="146 years ago" IsMobile="@IsMobile">
            <ContentIcon>
                <img src="/landing/timeline-telephone.svg" alt="telephone">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem TextTop="penicillin" TextBottom="95 years ago" IsMobile="@IsMobile">
            <ContentIcon>
                <img src="/landing/timeline-penicillin.svg" alt="penicillin">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem IsLeft="true" TextTop="digital computer" TextBottom="80 years ago" IsMobile="@IsMobile">
            <ContentIcon>
                <img src="/landing/timeline-computer.svg" alt="computer">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem TextTop="mobile phone" TextBottom="50 years ago" IconClass="pb-2" IsMobile="@IsMobile">
            <ContentIcon>
                <img src="/landing/timeline-mobile.svg" alt="mobile phone" class="self-end">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem
            IsLeft="true"
            TextBottom="10 years ago: dramatic progress in computer vision, speech recognition, and many other areas that were thought to be extremely hard for computers to tackle"
            IsMobile="@IsMobile">
            <ContentIcon>
                <img src="/landing/timeline-satellite.svg" alt="satellite">
            </ContentIcon>
        </LandingTimelineItem>

    </div>
    <div class="flex overflow-hidden justify-center items-center @(IsMobile ? "p-4 text-title-1" : "p-12 text-2xl")">
        <div class="flex-y w-144 text-center">
            <span>now: here we are,</span>with text, audio, and video chats
        </div>
    </div>
    <div class="flex overflow-hidden justify-center items-center @(IsMobile ? "px-4 pt-8 pb-12 text-title-1" : "p-24 text-4xl")">
        <div class="flex w-144 text-center">
            But somehow we still have to choose whether to type or to talk!
        </div>
    </div>
</div>

@code {
    [Parameter] public bool IsMobile { get; set; }
}
