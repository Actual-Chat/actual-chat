                <img src="/landing/timeline-talking.svg" alt="talk">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem TextTop="written languages" TextBottom="7,300 years ago">
            <ContentIcon>
                <img src="/landing/timeline-written.svg" alt="write">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem IsLeft="true" TextTop="wheel" TextBottom="5,300 years ago">
            <ContentIcon>
                <img src="/landing/timeline-wheel.svg" alt="wheel">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem TextTop="telegraph" TextBottom="180 years ago">
            <ContentIcon>
                <img src="/landing/timeline-telegraph.svg" alt="telegraph">
            </ContentIcon>
        </LandingTimelineItem>

        <LandingTimelineItem IsLeft="true" TextTop="telephone" TextBottom="146 years ago">
