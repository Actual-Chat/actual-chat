<div class="carousel scrollable @Class">
    <CascadingValue Name="CarouselLength" Value="CarouselLength">
    <CascadingValue Name="CarouselOrder" Value="CarouselOrder">
        @ChildContent
    </CascadingValue>
    </CascadingValue>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public int CarouselOrder { get; set; }
    [Parameter] public int CarouselLength { get; set; }
    [Parameter] public string Class { get; set; } = "";
}
