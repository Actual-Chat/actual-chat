@namespace ActualChat.UI.Blazor.App

<div class="part-right flex-x w-1/2 border-l">
    @if (!IsLeft) {
        <div class="flex-y min-w-4">
            <div class="top h-1/2 border-b"></div>
            <div class="bottom h-1/2 border-t"></div>
        </div>
        <div class="content flex-x w-full">
            <div class="content-icon flex items-center justify-center min-w-24 mx-2 @IconClass">
                @ChildContent
            </div>
            <div class="context-text flex-y w-full items-start justify-center">
                <div class="text-top">
                    @TextTop
                </div>
                <div class="text-bottom">
                    @TextBottom
                </div>
            </div>
        </div>
    }

</div>

@code {
    [Parameter] public bool IsLeft { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string TextTop { get; set; } = "";
    [Parameter] public string TextBottom { get; set; } = "";
    [Parameter] public string IconClass { get; set; } = "";
    [Parameter] public bool IsNarrow { get; set; }
}
