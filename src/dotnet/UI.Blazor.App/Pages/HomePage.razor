@page "/"
@using ActualChat.UI.Blazor.App.Pages.Landing
@layout NoLayout

<Landing/>

@code {
    [Inject] private UIHub Hub { get; init; } = null!;
    private AccountUI AccountUI => Hub.AccountUI;

    protected override void OnAfterRender(bool firstRender) {
        if (!firstRender)
            return;

        _ = AccountUI.ActiveSignInRequest.Value?.Show();
    }
}
